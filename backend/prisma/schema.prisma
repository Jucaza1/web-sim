generator client {
    provider = "prisma-client-js"
    binaryTargets = ["linux-musl-openssl-3.0.x","debian-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id         String   @id @default(cuid())
    name       String
    email      String   @unique
    password   String
    profession String
    companyId  String?   @map("company_id")
    createdAt  DateTime @default(now()) @map("created_at")
    isActive   Boolean  @default(true) @map("is_active")
    // isAdmin   Boolean  @default(false) @map("is_admin")

    company Company? @relation(fields: [companyId], references: [id])

    @@map("users")
}

model Company {
    id              String           @id @default(cuid())
    name            String           @unique
    image           String
    styleId         String           @map("style_id")

    users           User[]
    simulatorModels SimulatorModel[]
    simulators      Simulator[]

    @@map("companies")
}

model Simulator {
    id        String           @id @default(cuid())
    name      String
    companyId String           @map("company_id")
    description String

    models    SimulatorModel[]

    company Company @relation(fields: [companyId], references: [id])

    @@map("simulators")
}

model SimulatorModel {
    id          String   @id @default(cuid())
    simulatorId String   @map("simulator_id")
    name        String
    description String
    image       String
    webglUrl    String   @map("webgl_url")
    createdAt   DateTime @default(now()) @map("created_at")
    companyId   String

    simulator Simulator @relation(fields: [simulatorId], references: [id])
    company   Company?  @relation(fields: [companyId], references: [id])

    @@map("simulator_models")
}
